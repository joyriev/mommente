---
import { BRAND_PROJECTS } from "../constants";
---

<section id="brands" class="py-24 md:py-40 bg-brand-offwhite">
  <div class="container mx-auto px-6 md:px-12 max-w-7xl">
    <div
      class="flex flex-col md:flex-row md:items-end justify-between mb-20 gap-8"
    >
      <div class="space-y-4">
        <span
          class="text-xs uppercase tracking-[0.3em] font-bold text-brand-gold"
          >The Collective</span
        >
        <h2
          class="text-5xl md:text-7xl font-sans font-black uppercase tracking-tighter"
        >
          Our Brands
        </h2>
      </div>
      <div class="max-w-md">
        <p class="text-brand-charcoal/60 text-base font-light leading-relaxed">
          Mommente operates as an ecosystem of brands. Each venture is built
          with a singular focus: premium quality without the unnecessary markup.
        </p>
      </div>
    </div>

    <div
      class="grid md:grid-cols-2 lg:grid-cols-3 gap-px bg-brand-charcoal/10 border border-brand-charcoal/10"
    >
      {
        BRAND_PROJECTS.map((project) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative bg-brand-offwhite aspect-[4/5] overflow-hidden cursor-pointer block"
          >
            <img
              src={project.imageUrl}
              alt={project.title}
              class="w-full h-full object-cover grayscale brightness-95 group-hover:grayscale-0 group-hover:brightness-100 transition-all duration-1000 ease-in-out group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-brand-charcoal/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
            <div class="absolute inset-x-0 bottom-0 p-10 translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500 z-10">
              <p class="text-[10px] uppercase tracking-[0.3em] font-bold text-white/90 mb-3">
                {project.category}
              </p>
              <h3 class="text-3xl font-sans font-black uppercase text-white tracking-tighter">
                {project.title}
              </h3>
              <div class="mt-6 flex items-center text-white text-[10px] uppercase tracking-widest font-bold opacity-0 group-hover:opacity-100 transition-opacity delay-200">
                <span>Visit Brand Shop</span>
                <div class="ml-3 w-8 h-px bg-white" />
              </div>
            </div>
          </a>
        ))
      }
      <div
        class="bg-brand-gray flex items-center justify-center p-12 text-center group cursor-pointer hover:bg-brand-charcoal transition-colors duration-700"
      >
        <div class="space-y-6">
          <p
            class="text-brand-charcoal/40 group-hover:text-brand-offwhite/30 text-[10px] uppercase tracking-[0.4em] font-bold transition-colors"
          >
            Mommente Lab
          </p>
          <h3
            class="text-3xl font-sans font-black uppercase tracking-tighter group-hover:text-brand-offwhite transition-colors"
          >
            More<br />Coming Soon
          </h3>
          <div
            class="w-12 h-0.5 bg-brand-gold mx-auto group-hover:w-20 transition-all"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
