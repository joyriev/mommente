---
import heroBg from "../assets/mommente-hero-bg.jpeg";
---

<section
  class="relative h-screen flex flex-col justify-center overflow-hidden bg-brand-gray"
>
  {/* Background with optimized overlay */}
  <div class="absolute inset-0 z-0">
    <img
      src={heroBg.src}
      class="w-full h-full object-cover opacity-50 mix-blend-multiply grayscale"
      alt="Mommente House"
    />
    <div
      class="absolute inset-0 bg-gradient-to-r from-brand-offwhite via-brand-offwhite/50 to-transparent"
    >
    </div>
  </div>

  <div class="container mx-auto px-6 md:px-12 relative z-10 max-w-7xl">
    <div class="flex flex-col space-y-6 md:space-y-10">
      <div class="space-y-4">
        <p
          class="text-xs md:text-sm uppercase tracking-[0.5em] font-bold text-brand-gold fade-in"
          style="animation-delay: 0.1s"
        >
          A Modern E-Commerce House
        </p>
        <h1
          class="text-6xl md:text-[8.5vw] font-sans font-black leading-[0.85] tracking-tighter uppercase fade-in"
          style="animation-delay: 0.3s"
        >
          Elevated <br />
          Essentials
        </h1>
      </div>

      <div
        class="flex flex-col md:flex-row md:items-end justify-between gap-12 pt-12 border-t border-brand-charcoal/10 fade-in"
        style="animation-delay: 0.5s"
      >
        <div class="max-w-xl">
          <p
            class="text-xl md:text-3xl font-light text-brand-charcoal/90 leading-relaxed"
          >
            We build brands that turn ordinary routines into{" "}
            <span class="italic font-serif font-medium"> meaningful </span>{" "}
            lifestyle pieces.
          </p>
        </div>
        <div class="flex items-center group cursor-pointer pb-2 mb-2">
          <span class="text-[10px] uppercase tracking-[0.4em] font-black mr-8">
            The Collective
          </span>
          <div
            class="w-16 h-16 rounded-full border border-brand-charcoal/20 flex items-center justify-center group-hover:bg-brand-charcoal group-hover:text-white transition-all duration-700 transform group-hover:rotate-45"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Refined Scroll indicator */}
  <div
    class="absolute bottom-12 left-12 hidden md:flex items-center space-x-6 opacity-40"
  >
    <div class="w-px h-16 bg-brand-charcoal animate-pulse"></div>
    <span class="text-[10px] uppercase tracking-[0.5em] font-bold">
      Scroll to Explore
    </span>
  </div>
</section>

<style>
  .fade-in {
    opacity: 0;
    animation: fadeIn 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
