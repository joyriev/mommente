---
import { TEAM_MEMBERS } from "../constants";
---

<section id="team" class="py-24 md:py-40 bg-brand-offwhite">
  <div class="container mx-auto px-6 md:px-12">
    <div class="text-center mb-24 max-w-3xl mx-auto space-y-6">
      <h2
        class="text-4xl md:text-6xl font-sans font-black uppercase tracking-tighter"
      >
        The Studio Team
      </h2>
      <div class="w-16 h-1 bg-brand-gold mx-auto"></div>
      <p
        class="text-brand-charcoal/60 text-lg font-light leading-relaxed italic"
      >
        "A dedicated collective united by one goal: making everyday life feel
        more intentional."
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-16 max-w-7xl mx-auto">
      {
        TEAM_MEMBERS.map((member) => (
          <div class="group">
            <div class="relative overflow-hidden mb-8 bg-brand-gray aspect-[4/5]">
              <img
                src={member.imageUrl}
                alt={member.name}
                class="w-full h-full object-cover grayscale transition-all duration-1000 ease-in-out group-hover:grayscale-0 group-hover:scale-105"
              />
              <div class="absolute inset-0 border border-brand-charcoal/5 group-hover:border-brand-gold/20 transition-all duration-500" />
            </div>
            <div class="space-y-4">
              <div class="flex items-center justify-between border-b border-brand-charcoal/10 pb-4">
                <div>
                  <h3 class="text-2xl font-sans font-black uppercase tracking-tighter">
                    {member.name}
                  </h3>
                  <p class="text-[10px] uppercase tracking-[0.25em] font-black text-brand-gold">
                    {member.role}
                  </p>
                </div>
                <div class="w-8 h-8 rounded-full border border-brand-charcoal/10 flex items-center justify-center group-hover:bg-brand-charcoal group-hover:text-white transition-all duration-300">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M13.22 19.03a.75.75 0 0 1 0-1.06L18.16 13H3.75a.75.75 0 0 1 0-1.5h14.41l-4.94-4.97a.75.75 0 0 1 1.06-1.06l6.25 6.25a.75.75 0 0 1 0 1.06l-6.25 6.25a.75.75 0 0 1-1.06 0Z" />
                  </svg>
                </div>
              </div>
              <p class="text-sm text-brand-charcoal/60 font-light leading-relaxed">
                {member.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
